---
import CustomButton from "../components/CustomButton.astro";
import Header from "../components/Header.astro";
import Logo from "../components/Logo.astro";
import Layout from "../layouts/Layout.astro";
import HeroSection from "../components/loans/HeroSection.astro";
import Card from "../components/coporatePage/Card.astro";
import SectionToggle from "../components/loans/SectionToogle.astro";
import InvestmentStat from "../components/loans/InvestmentStat.astro";
import Footer from "../components/Footer.astro";
import Testimonials from "../components/loans/Testimonials.astro";
---

<Layout title="Get instant Loans - Dot">
    <Header id="instant-loan-header" styles="bg-white text-black">
        <Fragment slot="button">
            <CustomButton
                id="header"
                text="Open an account"
                href="https://retail.dot.ai/signup"
            />
        </Fragment>
        <Fragment slot="logo">
            <Logo color="black" />
        </Fragment>
    </Header>
    <HeroSection />
    <section class="py-[104px]">
        <div class="contain">
            <div class="text-center">
                <h1
                    data-animate="fade-in"
                    class="font-grosek animate-js mb-2 text-[2.7rem] font-medium"
                >
                    Quick access to loans for everyone
                </h1>
                <p
                    data-animate="fade-in"
                    class="font-inter mx-auto animate-js text-muted text-lg w-[80%] max-w-[900px]"
                >
                    We offer different loans for different needs, the choice is
                    yours
                </p>
            </div>

            <div class="grid grid-cols-6 gap-7 py-14">
                <Card
                    className="col-span-2"
                    title="Personal/Individual loans"
                    subtitle="Spending is inevitable. But we can help you put money away every time you transact."
                    imageurl="/images/bulk-transfer.webp"
                />
                <Card
                    className="col-span-2"
                    title="Agent/Merchant loans"
                    subtitle="Agents enjoy daily cash access and instant disbursement upon tier qualification."
                    imageurl="/images/confetti.webp"
                />
                <Card
                    className="col-span-2 px-4"
                    title="Business loans"
                    subtitle="Businesses get immediate funds upon eligibility."
                    imageurl="/images/scheduled.webp"
                />
            </div>
        </div>
    </section>
    <section
        class="bg-[url('/images/purple-business-full.webp')] bg-cover mb-9 w-full h-[28rem] bg-center"
    >
    </section>
    <SectionToggle />
    <InvestmentStat />
    <Testimonials />
    <Footer title="Here for when life happens" />
</Layout>
