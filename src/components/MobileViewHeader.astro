<div
    data-link
    class="fixed hide w-full transition-all duration-300 left-0 top-0 z-50 mt-3 max-w-[40rem] h-full bg-white"
>
    <div class="mt-[5rem]">
        <div
            class="text-black border py-2 w-full active   px-5 pb-0"
        >
            <div
                data-faq
                class="flex justify-between cursor-pointer select-none w-full py-[16px] items-center"
            >
                <h1 class="font-grosek text-black md:w-[75%]">Business</h1>
                <CaretDown />
            </div>
        </div>
    </div>
</div>

<script>
    const navMenu = document.querySelector("[data-link]");
    const menu = [...document.querySelectorAll("[data-menu]")];
    menu.forEach((el) => {
        console.log(el);
        el.addEventListener("click", () => {
            navMenu?.classList.toggle("hide");
            menu.forEach((k) => {
                k.classList.toggle("hidden");
            });
        });
    });
</script>

<style>
    .hide {
        transform: translateX(-100%);
    }
    header {
        transition: all 0.5s cubic-bezier(0.215, 0.61, 0.355, 1);
    }
    span,
    div {
        @apply max-xl:text-[14px];
    }
    ul {
        @apply max-xl:gap-4;
    }
    .header-up {
        transform: translateY(-100%);
        background: transparent;
    }
    .bg-white {
        background: white;
        color: black;
        box-shadow: 0 0 1px 0px black;
    }
</style>

<script>
    const containerel = document.querySelectorAll("[data-navnav]");
    const toggleel = [...document.querySelectorAll("[data-state]")];

    containerel.forEach((el, index) => {
        el.addEventListener("click", (event) => {
            toggleel.map((e, i) => {
                if (i == index) {
                    return;
                }
                e.classList.remove("active");
            });
            toggleel[index].classList.toggle("active");
        });
    });
</script>
