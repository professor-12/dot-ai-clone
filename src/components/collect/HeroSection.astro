---
import { Image } from "astro:assets";
import CustomButton from "../CustomButton.astro";
import InterestingButton from "../UI/InterestingButton.astro";
---

<main class="bg-[#F3FCF1] lg:pt-24 min-h-screen">
    <div
        class="contain relative justify-between gap-10 py-24 flex max-lg:flex-col"
    >
        <div class="lg:w-1/2 relative lg:h-[560px] max-w-[480px]">
            <InterestingButton
                text="Payment made easy for everyone"
                variants="red"
            />
            <h1
                data-animate="fade-in"
                class="font-grosek mt-6 animate-js font-medium text-3xl lg:text-5xl leading-[4rem]"
            >
                A point of sale for how you sell
            </h1>
            <p
                data-animate="fade-in"
                class="font-inter animate-js mt-4 md:text-lg text-muted"
            >
                WEasy to use for any kind of business, this POS terminal caters
                to your business needs
            </p>
            <div>
                <CustomButton
                    id="button-corporate"
                    text="Login to your account"
                    href="https://app.dotpay.africa/auth/login"
                    className="bg-black text-white mt-10"
                    ><svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="lucide lucide-chevron-right"
                        ><polyline points="9 18 15 12 9 6"></polyline></svg
                    ></CustomButton
                >
                <button class="bg-white ml-2 p-3 px-7 rounded-xl border"
                    >Learn more</button
                >
                <span class="block text-sm text-gray-700 mt-3 font-inter"
                    >Create an account under 10 minutes.</span
                >
            </div>
        </div>
        <div
            class="lg:w-1/2 overflow-hidden rounded-2xl max-md:h-[30rem] max-w-[cal(1fr-30px)] relative backdrop-blur-sm bg-[url('/images/blur.webp')] bg-cover"
        >
            <Image
                src="/images/collect-hero.webp"
                alt=""
                width={150}
                height={150}
                class="w-full h-full absolute top-0 left-0 bottom-0 right-0"
            />
        </div>
    </div>
</main>
